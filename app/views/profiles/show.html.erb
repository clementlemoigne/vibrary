<div class="d-flex justify-content-center align-items-center sticky-top bg-white">
  <h1 class="page-title">Settings</h1>
</div>
<div class="content">
  <div class="content-btn d-flex flex-column align-items-center">
    <div class="m-3">
      <%= link_to "Change your preferences", edit_profile_path, class: "btn-pink" %>
    </div>
    <div id="recommended" class="m-3">
      <%= link_to "Change your informations", edit_user_registration_path, class: "btn-pink" %>
    </div>
    <div class="logout m-3">
      <div class="m-3">
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="logout-icon fas fa-sign-out-alt"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/navbar" %>

<script type="text/javascript">
  document.querySelectorAll(".navbar-icon").forEach ((element) => {
    element.style.opacity = 0.3;
  });
  document.getElementById("settings-icone").style.opacity = 1;
</script>
