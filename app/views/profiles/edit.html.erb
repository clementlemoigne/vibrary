<h1>Edit your preferences <%= @profile.username %></h1>

<%= simple_form_for @profile, url: profile_path, method: :patch do |f| %>
    <%= f.input :whitelist, as: :check_boxes, collection: Story::TAGS.each %>
    <%= f.button :submit, "Envoyer", class: "btn btn-dark my-auto" %>
<% end %>


<%= render "shared/navbar" %>

<script type="text/javascript">
  document.querySelectorAll(".navbar-icon").forEach ((element) => {
    element.style.opacity = 0.3;
  });
  document.getElementById("settings-icone").style.opacity = 1;
</script>

<%= link_to "Back", :back %>
