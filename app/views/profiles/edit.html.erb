<div class="d-flex justify-content-center align-items-center sticky-top bg-white">
  <h1 class="page-title"><%= link_to "Settings", profile_path %> > Preferences</h1>
</div>

<div class="content">

  <%= simple_form_for @profile, url: profile_path, method: :patch do |f| %>
    <div class="container-lists form d-flex justify-content-center">
      <div class="lists m-3">
        <%= f.input :whitelist, input_html: { class: "my-checkboxes" }, as: :check_boxes, collection: Story::TAGS.each %>
      </div>
      <div class="lists m-3">
        <%= f.input :blacklist, input_html: { class: "my-checkboxes" }, as: :check_boxes, collection: Story::TAGS.each %>
      </div>
    </div>
    <div class="d-flex align-items-center flex-column">
      <%= f.button :submit, "Update", class: "btn-pink m-2" %>
      <%= link_to "Back", :back %>
    </div>
  <% end %>


  <%= render "shared/navbar" %>

  <script type="text/javascript">
    document.querySelectorAll(".navbar-icon").forEach ((element) => {
      element.style.opacity = 0.3;
    });
    document.getElementById("settings-icone").style.opacity = 1;
  </script>

</div>
